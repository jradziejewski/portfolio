---
import { Button } from '@/components/ui/button';
import Layout from '../layouts/Layout.astro';
import AboutCard from '@/components/AboutCard.astro';
---

<Layout title="Your Name - Portfolio">
  <main class="min-h-screen flex items-center justify-center px-4 py-8">
    <div
      class="max-w-content w-full flex flex-col gap-10 lg:items-stretch justify-center mx-auto items-center"
    >
      <div
        class="flex lg:justify-around items-center gap-8 lg:flex-row flex-col max-sm:max-w-[70vw]"
      >
        <!-- Hero Section -->
        <div class="flex flex-col justify-center gap-4">
          <div>
            <h1
              class="lg:text-5xl text-3xl lg:h-14 max-h-20 text-transparent font-bold bg-clip-text bg-gradient-to-r from-blue-900 to-blue-600"
            >
              Turning Data into Insights,
            </h1>
            <h1 class="lg:text-5xl font-bold text-2xl">one line of code at a time.</h1>
          </div>
          <p class="lg:text-lg mb-4 max-w-[600px]">
            As a passionate software developer, I blend my expertise in data analysis, engineering,
            and web development to build intelligent, data-driven solutions that drive results.
          </p>
          <p class="lg:text-lg mb-4 max-w-[600px]">
            Explore my work and let's create something amazing together.
          </p>
        </div>

        <!-- Profile Card -->
        <AboutCard />
      </div>

      <!-- Buttons Section -->
      <div class="flex justify-center space-x-4">
        <Button>View My Work</Button>
        <Button>Contact Me</Button>
      </div>
    </div>
  </main>
</Layout>
