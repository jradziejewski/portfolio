---
// src/components/Icon.astro
export interface Props {
  name: string;
  class?: string;
}

const { name, class: className } = Astro.props;

const icons = {
  linkedin: await import('../icons/linkedin.svg?raw'),
  github: await import('../icons/github.svg?raw'),
  python: await import('../icons/python.svg?raw'),
  javascript: await import('../icons/javascript.svg?raw'),
  typescript: await import('../icons/typescript.svg?raw'),
  react: await import('../icons/react.svg?raw'),
  snowflake: await import('../icons/snowflake.svg?raw'),
  sql: await import('../icons/sql.svg?raw'),
  airflow: await import('../icons/airflow.svg?raw'),
  // Add other icons as needed
};

const svg = icons[name]?.default;
---

<span class={className} set:html={svg} />
